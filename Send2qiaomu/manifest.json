{
  "manifest_version": 3,
  "name": "Send to Qiaomu",
  "version": "1.2",
  "description": "将当前页面收藏到乔木博客，支持添加描述和标签",
  "permissions": ["tabs", "scripting", "activeTab", "notifications"],
  "host_permissions": ["http://localhost:3000/*", "http://127.0.0.1:3000/*", "http://www.qiaomu.ai/*", "https://www.qiaomu.ai/*"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html",
    "default_title": "收藏到乔木博客"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}